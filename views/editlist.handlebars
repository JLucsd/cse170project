    <script language="JavaScript">
        var items = [];
        function showInput() {
            var message_entered =  document.getElementById("item-name").value;
            console.log(message_entered);
            items.push(message_entered);
            var required = document.getElementById('list-items');
            required.innerHTML = required.innerHTML+"<br/>"+ message_entered;
            document.getElementById('item-name').value = " ";
            console.log(items);
        }

        function sendVal()
        {
            var field = document.getElementById('item-name');
            field.value = items;
        }
    </script>

